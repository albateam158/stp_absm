<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.xenix.wicrowd.mybatis.mapper.XPublisherRequestMapper">

    <!--========================================== INSERT ============================================== -->

    <!--========================================== UPDATE ============================================== -->

    <!--========================================== DELETE ============================================== -->

    <!--========================================== SELECT ============================================== -->
    <sql id="selectPublisherRequestSql">
        SELECT *
        FROM wi_publisher_request
        WHERE delete_date IS NULL
        <if test="keyword != null and keyword != ''">AND corp_name LIKE CONCAT('%', #{keyword}, '%')</if>
    </sql>
    <select id="selectPublisherRequestCount" parameterType="map" resultType="int">
        SELECT COUNT(*)
        FROM (<include refid="selectPublisherRequestSql"></include>) a
    </select>


    <resultMap id="publisherRequestMap" type="net.xenix.wicrowd.model.XPublisherRequest">
        <id property="requestId" column="request_id"/>
        <result property="corpName" column="corp_name" typeHandler="net.xenix.wicrowd.mybatis.EncryptStringTypeHandler"/>
        <result property="location" column="location" typeHandler="net.xenix.wicrowd.mybatis.EncryptStringTypeHandler"/>
        <result property="managerName" column="manager_name" typeHandler="net.xenix.wicrowd.mybatis.EncryptStringTypeHandler"/>
        <result property="managerPhone" column="manager_phone" typeHandler="net.xenix.wicrowd.mybatis.EncryptStringTypeHandler"/>
        <result property="managerEmail" column="manager_email" typeHandler="net.xenix.wicrowd.mybatis.EncryptStringTypeHandler"/>
        <result property="file1" column="file1"/>
        <result property="filename1" column="filename1"/>
        <result property="file2" column="file2"/>
        <result property="filename2" column="filename2"/>
        <result property="file3" column="file3"/>
        <result property="filename3" column="filename3"/>
        <result property="file4" column="file4"/>
        <result property="filename4" column="filename4"/>
        <result property="regDate" column="reg_date"/>
    </resultMap>


    <select id="selectPublisherRequest" parameterType="map" resultMap="publisherRequestMap">
        <include refid="selectPublisherRequestSql"></include>
        ORDER BY <foreach collection="pageable.sort" item="order" separator=",">${order.property} ${order.direction}</foreach>
        LIMIT #{pageable.offset}, #{pageable.pageSize}
    </select>

    <select id="selectLatelyPublisherRequest" resultMap="publisherRequestMap">
        <include refid="selectPublisherRequestSql"></include>
        ORDER BY reg_date DESC
        LIMIT 1
    </select>



</mapper>